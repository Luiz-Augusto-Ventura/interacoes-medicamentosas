@model InteracoesMedicamentosas.Models.Interacoes

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Interacão</title>
    <link rel="stylesheet" type="text/css" href="~/content/materialize/css/materialize.css" media="all,projection">
    <link rel="stylesheet" type="text/css" href="~/content/materialize/css/style.css" media="all,projection">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="vertically-aligned">
        <div class="container center">
            <div class="center row">
                <div class="col s12">
                    <div class="card grey darken-3">
                        <div class="card-content white-text" id="conteudo_reacao">
                            <span class="card-title">Interação</span>
                            <p>
                                <b class="orange-text text-darken-3">Primeiro medicamento: </b> @ViewBag.Med1 <br />
                                <b class="orange-text text-darken-3">Segundo medicamento: </b> @ViewBag.Med2  <br />
                                <br />
                                <b class="orange-text text-darken-3">Reação: </b>@Html.DisplayFor(model => model.reacao)
                            </p>
                        </div>
                        <div class="card-action">
                            <a href="#printElem" onclick="printElem('conteudo_reacao');">Imprimir</a>
                            <a href="@Url.Action("Index", "Medicamentos")">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="~/scripts/materialize/print.js"></script>
</body>
</html>
